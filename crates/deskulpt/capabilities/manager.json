{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "manager-capabilities",
  "description": "Capabilities of the manager window.",
  "windows": ["manager"],
  "permissions": [
    "deskulpt-core:allow-emit-on-render-ready",
    "deskulpt-core:allow-exit-app",
    "deskulpt-core:allow-open-widget",
    "deskulpt-core:allow-rescan-widgets",
    "deskulpt-core:allow-bundle-widgets",
    "deskulpt-core:allow-update-settings",
    "core:event:default",
    "clipboard-manager:allow-write-text",
    "opener:allow-open-url",
    "opener:allow-default-urls"
  ]
}
