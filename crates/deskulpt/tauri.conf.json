{
  "productName": "Deskulpt",
  "version": "0.0.1",
  "identifier": "com.tauri.deskulpt",
  "build": {
    "beforeDevCommand": "pnpm -C src dev",
    "beforeBuildCommand": "pnpm -C src build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../../src/dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "manager",
        "title": "Deskulpt Manager",
        "url": "views/manager.html",
        "width": 750,
        "height": 500,
        "center": true,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "visible": false
      }
    ],
    "trayIcon": {
      "id": "deskulpt-tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Deskulpt"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
