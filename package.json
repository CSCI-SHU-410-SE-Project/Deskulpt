{
  "name": "deskulpt",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "format": "pnpm format:js && pnpm format:rs",
    "format:check": "pnpm format:js:check && pnpm format:rs:check",
    "format:js": "prettier --write .",
    "format:js:check": "prettier --check .",
    "format:rs": "cd src-tauri && cargo fmt",
    "format:rs:check": "cd src-tauri && cargo fmt -- --check",
    "lint": "pnpm lint:js && pnpm lint:rs",
    "lint:check": "pnpm lint:js:check && pnpm lint:rs:check",
    "lint:js": "eslint --max-warnings=0 .",
    "lint:js:check": "eslint --max-warnings=0 --fix .",
    "lint:rs": "cd src-tauri && cargo clippy -- -D warnings",
    "lint:rs:check": "cd src-tauri && cargo clippy --fix --allow-dirty --allow-staged -- -D warnings",
    "test": "pnpm test:js && pnpm test:rs",
    "test:js": "echo 'Not implemented yet'",
    "test:rs": "cd src-tauri && cargo test",
    "cov:js": "echo 'Not implemented yet'",
    "cov:rs": "cd src-tauri && cargo llvm-cov --html"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@radix-ui/themes": "^3.1.3",
    "@tauri-apps/api": "^2.0.0-rc.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.1.0-beta.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.4.6",
    "react-error-boundary": "^4.0.13",
    "react-icons": "^5.3.0",
    "sonner": "^1.5.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.12.0",
    "@tauri-apps/cli": "^2.0.0-rc.4",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.57.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "indent-string": "^5.0.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "shell-quote": "^1.8.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
