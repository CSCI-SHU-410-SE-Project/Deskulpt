{
  build: {
    beforeDevCommand: "npm run dev",
    beforeBuildCommand: "npm run build",
    devPath: "http://localhost:1420",
    distDir: "../dist",
  },
  package: {
    productName: "Deskulpt",
    version: "0.0.0",
  },
  tauri: {
    macOSPrivateApi: true,
    allowlist: {
      all: false,
      shell: {
        all: false,
        // FIXME: This is temporary for opening the widget base directory; we must
        // implement proper security measures some day; for relevant discussions see
        // https://discordapp.com/channels/616186924390023171/1224276907215028325
        open: ".+",
      },
      window: {
        all: false,
        setIgnoreCursorEvents: true,
      },
    },
    windows: [
      {
        label: "manager",
        title: "Deskulpt Manager",
        url: "views/index.html",
        width: 750,
        height: 500,
        center: true,
        resizable: false,
        visible: false, // Hide on launch, show with tray icon
      },
    ],
    systemTray: {
      iconPath: "icons/icon.png",
      iconAsTemplate: true,
    },
    security: {
      csp: null,
    },
    bundle: {
      active: true,
      targets: "all",
      identifier: "com.tauri.deskulpt",
      icon: [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico",
      ],
    },
  },
}
